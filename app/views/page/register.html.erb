<!DOCTYPE html>
<html>
  <%= form_tag(:controller => :page,:action => :register) do %>
    <table class="table">
      <thead>
        <tr>
          <th>ポケモン名</th>
          <th>持ち物</th>
          <th>わざ１</th>
          <th>わざ２</th>
          <th>わざ３</th>
          <th>わざ４</th>
        </tr>
      </thead>
      <tbody>
      <% for i in 1..6 do %>
        <tr>
          <td><input type="text" name="pokemon[]" data-autocomplete="autocomplete_pokemon_name"></td>
          <td><input type="text" name="item[]" data-autocomplete="autocomplete_item_name"></td>
          <% for i in 1..4 do %>
            <td><input type="text" name="move[]" data-autocomplete="autocomplete_move_name"></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <!--ボタン設定-->
    <div class="row">
      <div class="col-xs-6">
        <button type="submit" class="btn btn-primary btn-block">自分のパーティー登録を行います</button>
      </div>
    </div>
    <!--ボタン設定ここまで-->
  <% end %>
</html>